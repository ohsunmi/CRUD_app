<form action="/artists/<%= @artist.id %>/songs/<%= @song.id %>" method="post">
	<div>
		<label>Song: </label>
		<input type="text" name="song[name]" value="<%= @song.name %>" />
	</div>
	<div>
		<label>On iTunes?: </label>
		<input type="radio" name="song[on_itunes]" value="true" />Yes
		<input type="radio" name="song[on_itunes]" value="false" />No
	</div>
	<div>
		<label>Number of Soundcloud likes: </label>
		<input type="text" name="song[soundcloud_likes]" value="<%= @song.soundcloud_likes %>" />
	</div>
	<input type="submit" value="Edit song" />
</form>